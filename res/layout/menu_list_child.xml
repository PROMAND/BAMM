<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical" android:clickable="true">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="New Text"
                android:id="@+id/textViewChild"
                android:layout_weight="1" />
        <ImageButton
                android:id="@+id/orderBtnMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:contentDescription="@string/minus"
                android:src="@drawable/minus_white"
                android:gravity="right"/>
        <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/TVcountOrder" android:layout_gravity="center" android:gravity="center"
                android:layout_weight="0"/>
        <ImageButton
                android:id="@+id/orderBtnPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:contentDescription="@string/plus"
                android:src="@drawable/plus"
                android:gravity="right"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/IMGmenuItem" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:id="@+id/TVmenuFoodDescription"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingridients"
            android:id="@+id/TVmenuFoodIngredients"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price"
            android:id="@+id/TVmenuPrice" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preparation time"
            android:id="@+id/TVmenuPreparation" />
    </LinearLayout>

</LinearLayout>