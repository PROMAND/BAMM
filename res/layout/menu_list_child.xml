<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical" android:clickable="true">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textViewChild"
                android:layout_weight="1" />
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/BorderPlus" android:gravity="right"
                android:layout_weight="0"/>
        <TextView
                android:layout_width="20dip"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/TVcountOrder" android:layout_gravity="center" android:gravity="left"
                android:layout_weight="0"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/BorderMinus" android:layout_gravity="center"
                android:layout_weight="0"/>
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:id="@+id/TVmenuFoodDescription"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="some text"
            android:id="@+id/TVmenuFoodIngredients"/>
</LinearLayout>