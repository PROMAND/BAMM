<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"

        >
    <TextView
            android:id="@+id/orderTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/orderTextOnTop"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:gravity="center_horizontal"
            />

    <EditText
            android:id="@+id/orderEditTextName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/orderEditTextName"
            android:inputType="text"
            />
    <EditText
            android:id="@+id/orderEditTextPhoneNumber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/orderEditTextPhoneNumber"
            android:inputType="phone"
            />
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="7"

            >
        <TextView
                android:id="@+id/orderTextViewSits"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="@string/orderSits"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                />
        <ImageButton
                android:id="@+id/orderBtnMinus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/minus"
                android:src="@drawable/minus_white"
            />
        <TextView
                android:id="@+id/orderEditTextSits"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20dip"
                android:paddingTop="10dp"
                />
        <ImageButton
                android:id="@+id/orderBtnPlus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/plus"
                android:src="@drawable/plus"
                />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/dateAndTimeLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >
        <Button
                android:id="@+id/btnDatePicker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/orderPickDateBtn"
        />
        <Button
                android:id="@+id/btnTimePicker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/orderPickTimeBtn"
                />

    </LinearLayout>
    <LinearLayout
            android:id="@+id/orderDateLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/orderDateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/orderDate"
                android:layout_weight="1"
                />
        <TextView
                android:id="@+id/orderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                />
        <TextView
                android:id="@+id/orderTimeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/orderTime"
                android:layout_weight="1"
                />
        <TextView
                android:id="@+id/orderTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                />

    </LinearLayout>
    <LinearLayout
            android:id="@+id/orderTimeLayout"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
        <ListView
                android:id="@+id/orderListView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                />

    </LinearLayout>
    <Button
            android:id="@+id/orderConfirmButton"
            android:layout_width="fill_parent"
            android:layout_height="59dp"
            android:text="@string/orderConfirmButton"
            android:textSize="17dp"
            android:layout_gravity="bottom"
            />

</LinearLayout>

