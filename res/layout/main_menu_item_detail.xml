<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >

    <ImageView android:id="@+id/mainMenuImg"
               android:src="@drawable/abs__ab_bottom_solid_dark_holo"
               android:layout_height="190dp"
               android:layout_width="300dp"
               android:scaleType="fitXY"
               android:layout_gravity="left"
               android:background="#ffffff"
               android:padding="1dp"/>

    <TextView android:id="@+id/descriptionit"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:text="@string/des"
              android:textStyle="bold"/>

    <TextView android:id="@+id/textViewItemDetails"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:text="Groups"
              android:gravity="left"
              android:paddingLeft="5dip"
              android:paddingRight="5dip"
              android:textSize="17dip"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:gravity="bottom">

        <TextView android:id="@+id/seatsit"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/seats"
                  android:textStyle="bold"
                  android:paddingLeft="5dip"
                  android:paddingRight="5dip"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max seats"
                android:id="@+id/TVMaxSeats"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"/>

    </LinearLayout>

    <TextView android:id="@+id/contactit"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:text="@string/con"
              android:textStyle="bold"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

    <TextView android:id="@+id/numberit"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/cellnr"
              android:textStyle="bold"
              android:paddingLeft="5dip"
              android:paddingRight="5dip"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cell number"
        android:id="@+id/TVmainCellNr"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"/>

    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

    <TextView android:id="@+id/numberit"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/email"
              android:textStyle="bold"
              android:paddingLeft="5dip"
              android:paddingRight="5dip"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="e-mail"
        android:id="@+id/TVmainEmail"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"/>

    </LinearLayout>
</LinearLayout>

